<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gestionUser.UserUpdate">

    <!-- Champs d'entrée pour les informations de l'utilisateur -->


    <EditText
        android:id="@+id/tiEmail"
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:layout_marginTop="84dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/tiPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiEmail" />


    <EditText
        android:id="@+id/tiFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Full Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiPassword" />

    <EditText
        android:id="@+id/tiAdress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiFullName" />

    <!-- Bouton pour la sélection d'image -->

    <!-- ImageView pour afficher l'image sélectionnée -->

    <EditText
        android:id="@+id/tiCin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiAdress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CIN"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:id="@+id/selectImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiCin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sélectionner une image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selectImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <!-- Bouton pour téléverser l'image vers Cloudinary -->

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Téléverser vers Cloudinary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectedImageView"
        tools:layout_editor_absoluteY="214dp" />
    <ImageView
        android:id="@+id/imageEllipseTen"
        android:layout_width="265dp"
        android:layout_height="105dp"
        android:layout_gravity="top|end"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_ellipse10"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_ellipse10" />

    <ImageView
        android:id="@+id/imageEllipseTen11"
        android:layout_width="241dp"
        android:layout_height="192dp"
        android:layout_gravity="top|end"

        android:layout_marginTop="608dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cercle"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="-35dp"
        tools:src="@drawable/cercle" />
    <ImageView
        android:id="@+id/imageEllipseNineOne"
        android:layout_width="262dp"
        android:layout_height="866dp"
        android:layout_gravity="top|start"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_ellipse9_81x292"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
