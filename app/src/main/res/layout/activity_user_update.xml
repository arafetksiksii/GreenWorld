<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gestionUser.UserUpdate">



    <ImageView
        android:id="@+id/imageEllipseTen"
        android:layout_width="265dp"
        android:layout_height="105dp"
        android:layout_gravity="top|end"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_ellipse10"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_ellipse10" />

    <ImageView
        android:id="@+id/imageEllipseTen11"
        android:layout_width="241dp"
        android:layout_height="192dp"
        android:layout_gravity="top|end"
        android:layout_marginStart="-50dp"
        android:layout_marginEnd="170dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cercle"
        tools:ignore="ContentDescription"
        tools:src="@drawable/cercle" />

    <ImageView
        android:id="@+id/imageEllipseNineOne"
        android:layout_width="262dp"
        android:layout_height="866dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/imageEllipseTen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_ellipse9_81x292"
        tools:ignore="ContentDescription" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/green"
        android:contentDescription="@string/back" />

    <!-- CardView for profile image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="60dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/btnReturn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_group_24"
            android:contentDescription="@string/profile_picture"
            app:layout_constraintTop_toTopOf="@+id/cardViewProfile"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewProfile"
            app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
            app:layout_constraintEnd_toEndOf="@+id/cardViewProfile" />
    </androidx.cardview.widget.CardView>

    <!-- Buttons for selecting and uploading images -->

    <Button
        android:id="@+id/selectImageButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/select_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewProfile" />

    <Button
        android:id="@+id/uploadImageButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/upload_image"
        app:layout_constraintTop_toBottomOf="@id/selectImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
