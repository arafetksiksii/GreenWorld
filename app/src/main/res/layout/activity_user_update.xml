<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUpdate">

    <!-- Champs d'entrée pour les informations de l'utilisateur -->

    <EditText
        android:id="@+id/tiEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="477dp" />

    <EditText
        android:id="@+id/tiPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/tiFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="383dp" />

    <EditText
        android:id="@+id/tiAdress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="148dp" />

    <!-- Bouton pour la sélection d'image -->

    <!-- ImageView pour afficher l'image sélectionnée -->

    <EditText
        android:id="@+id/tiCin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiAdress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CIN"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="536dp" />

    <Button
        android:id="@+id/selectImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiCin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sélectionner une image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selectImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <!-- Bouton pour téléverser l'image vers Cloudinary -->

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Téléverser vers Cloudinary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectedImageView"
        tools:layout_editor_absoluteY="214dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
